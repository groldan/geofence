<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.geoserver.geofence.openapi</groupId>
    <artifactId>openapi</artifactId>
    <version>${revision}</version>
  </parent>
  <artifactId>geofence-openapi-js-client</artifactId>
  <dependencies></dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.openapitools</groupId>
        <artifactId>openapi-generator-maven-plugin</artifactId>
        <executions>
          <execution>
            <?m2e ignore?>
            <id>generate-rules-js-client</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <!-- https://openapi-generator.tech/docs/generators/javascript/ -->
              <inputSpec>${project.basedir}/../geofence-api.yaml</inputSpec>
              <generatorName>javascript</generatorName>
              <configOptions>
                <apiPackage>GeoFence</apiPackage>
                <emitJSDoc>true</emitJSDoc>
                <projectName>geofence-js-client</projectName>
              </configOptions>
            </configuration>
          </execution>
          <execution>
            <?m2e ignore?>
            <id>generate-users-js-client</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <!-- https://openapi-generator.tech/docs/generators/javascript/ -->
              <inputSpec>${project.basedir}/../geofence-user-management.yaml</inputSpec>
              <generatorName>javascript</generatorName>
              <configOptions>
                <apiPackage>GeoFence</apiPackage>
                <emitJSDoc>true</emitJSDoc>
                <projectName>geofence-js-client</projectName>
              </configOptions>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
